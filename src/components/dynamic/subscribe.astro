---
import type { SubscribeFormProps } from "../../types/components"
const {subscribe} = Astro.props as SubscribeFormProps;
---

<div class="mx-auto max-w-screen-2xl">
  <h2 class="mb-4 text-3xl font-bold md:text-5xl text-center">
    {subscribe.title}
  </h2>
  <p class="mx-auto mb-6 max-w-screen-2xl text-sm text-gray-500 sm:text-base md:mb-12">
    {subscribe.description}
  </p>

  <div class="mx-auto mb-4 flex max-w-screen-2xl justify-center">
    <form name="email-form" method="get" class="relative w-full max-w-lg">
      <input
        type="email"
        class="h-9 w-full border border-solid border-black bg-white px-3 py-6 text-sm text-black"
        placeholder={subscribe.placeholder}
        required
      />
      <input
        type="submit"
        value={subscribe.buttonText}
        class="relative right-0 top-1 w-full cursor-pointer bg-[#ff4f1f] px-6 py-2 text-center font-semibold text-white sm:absolute sm:right-[5px] sm:w-auto"
      />
    </form>
  </div>
</div>


