---
import type { HeroProps } from '../../types/components';
const {hero} = Astro.props as HeroProps;
---

<div class="bg-white pb-6 sm:pb-8 lg:pb-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <section class="mb-8 flex flex-col justify-between gap-6 sm:gap-10 md:mb-16 md:gap-16 md:flex-row">
      <!-- content - start -->
      <div class="flex flex-col justify-center sm:text-center lg:py-12 lg:text-left xl:w-1/2">
        <p class="mb-4 font-semibold text-[#ff4f1f] md:mb-6 md:text-lg xl:text-xl">
          {hero.tg_line}
        </p>

        <h1 class="mb-8 text-4xl font-bold text-black sm:text-5xl md:mb-12 md:text-6xl">
          {hero.mh_line}
        </h1>

        <div class="flex flex-col gap-2.5 sm:flex-row sm:justify-center lg:justify-start">
          <a
            href="#"
            class="inline-block rounded-lg bg-[#ff4f1f] px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-indigo-300 transition duration-100 hover:bg-indigo-600 focus-visible:ring active:bg-indigo-700 md:text-base"
          >
            {hero.p_cta}
          </a>
          <a
            href="#"
            class="inline-block rounded-lg bg-gray-200 px-8 py-3 text-center text-sm font-semibold text-gray-500 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-300 focus-visible:ring active:text-gray-700 md:text-base"
          >
            {hero.s_cta}
          </a>
        </div>
      </div>
      <!-- content - end -->

      <!-- image - start -->
      <div class="flex flex-col justify-center sm:text-center lg:py-12 lg:text-left xl:w-1/2">
        <div>
          <img
            src={hero.image}
            alt={hero.alt}
            loading="lazy"
            class="h-full w-full object-cover object-center"
          />
        </div>
      </div>
      <!-- image - end -->
    </section>
  </div>
</div>






