---
const { title, logos = [] } = Astro.props;
---

<section class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <h2 class="mb-4 text-center text-2xl font-bold text-black md:mb-8 lg:text-3xl">
      {title}
    </h2>

    <div class="grid grid-cols-2 gap-6 rounded-lg bg-white p-6 sm:h-40 sm:content-evenly md:grid-cols-4">
      {logos.map((logo, index) => (
        <div class="flex justify-center" key={index}>
          <div class="h-6 w-auto sm:h-8 lg:h-10" innerHTML={logo} />
        </div>
      ))}
    </div>
  </div>
</section>




