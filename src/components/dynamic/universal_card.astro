---
import type { BlogCard } from '../../types/components.ts';


const {blog_data} = Astro.props as BlogCard;
---

<a href={blog_data.href} class="group block border rounded-2xl p-5 hover:border-orange-600 hover:bg-gray-50 transition">
  <img src={blog_data.image} alt={blog_data.title} class="rounded-lg w-full h-48 object-cover mb-4" loading="lazy" />
  <div class="text-sm text-gray-500 mb-1">{blog_data.category} â€¢ {blog_data.date}</div>
  <h3 class="text-lg font-semibold text-gray-900 group-hover:text-orange-600 mb-1">{blog_data.title}</h3>
  <p class="text-sm text-gray-600 mb-3">{blog_data.excerpt}</p>
  <div class="text-xs text-gray-500">By {blog_data.author}</div>
  {blog_data.tags.length > 0 && (
    <ul class="mt-2 flex flex-wrap gap-1">
      {blog_data.tags.map((tag) => (
        <li class="bg-orange-100 text-orange-600 px-2 py-0.5 rounded text-xs">{tag}</li>
      ))}
    </ul>
  )}
</a>
